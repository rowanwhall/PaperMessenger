<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewholder_chats_list_container_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/viewholder_chats_list_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_audiotrack_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/content_description_viewholder_chats_list_iv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/viewholder_chats_list_iv"
        android:layout_toEndOf="@id/viewholder_chats_list_iv"
        android:layout_toLeftOf="@+id/viewholder_chats_list_timestamp_tv"
        android:layout_toStartOf="@+id/viewholder_chats_list_timestamp_tv">

        <TextView
            android:id="@+id/viewholder_chats_list_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/viewholder_chats_list_description_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="@color/textColorPrimaryLight"/>

    </LinearLayout>

    <TextView
        android:id="@+id/viewholder_chats_list_timestamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimaryLight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        tools:text="1m"/>

</RelativeLayout>