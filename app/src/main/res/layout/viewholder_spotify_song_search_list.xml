<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewholder_spotify_song_search_container_rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/viewholder_spotify_song_search_list_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/content_description_viewholder_spotify_song_search_iv"/>

    <TextView
        android:id="@+id/viewholder_spotify_song_search_song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/viewholder_spotify_song_search_list_iv"
        android:layout_toEndOf="@id/viewholder_spotify_song_search_list_iv"
        tools:text="Song Name"/>

    <TextView
        android:id="@+id/viewholder_spotify_song_search_artist_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimaryLight"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/viewholder_spotify_song_search_list_iv"
        android:layout_toEndOf="@id/viewholder_spotify_song_search_list_iv"
        android:layout_below="@id/viewholder_spotify_song_search_song_name_tv"
        tools:text="Artist Name"/>

</RelativeLayout>