<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/viewholder_create_chat_friends_list_profile_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/content_description_viewholder_create_chat_list_iv"/>

    <TextView
        android:id="@+id/viewholder_create_chat_friends_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/viewholder_create_chat_friends_list_profile_iv"
        android:layout_toEndOf="@id/viewholder_create_chat_friends_list_profile_iv"
        android:layout_toLeftOf="@+id/viewholder_create_chat_friends_list_cb"
        android:layout_toStartOf="@+id/viewholder_create_chat_friends_list_cb"
        tools:text="Friend name"/>

    <CheckBox
        android:id="@+id/viewholder_create_chat_friends_list_cb"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>